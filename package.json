  "bugs": {
    "url": "https://github.com/zharinoff/hugo-card-theme/issues"
  },
  "homepage": "https://github.com/zharinoff/hugo-card-theme#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.19"
  },
