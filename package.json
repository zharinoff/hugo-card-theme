{
  "name": "hugo-card-theme",
  "version": "1.0.0",
  "description": "Конфигурация Tailwind CSS для темы Hugo Card Theme",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./static/css/style.css --minify",
    "dev:css": "tailwindcss -i ./assets/css/main.css -o /static/css/style.css --watch",
    "dev": "npm run dev:css & hugo server",
    "build": "npm run build:css & hugo --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zharinoff/hugo-card-theme.git"
  },
